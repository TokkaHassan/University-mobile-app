<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="22dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:layout_margin="10dp"
    android:background="@color/colorPrimaryDark">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contacts_name"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"

            android:text="Name"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/contact_mobile"
            app:layout_constraintEnd_toStartOf="@+id/contacts_theName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_mobile"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Mobile no."
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/contacts_email"
            app:layout_constraintEnd_toStartOf="@+id/contact_theMobile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contacts_name" />

        <TextView
            android:id="@+id/contacts_email"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"

            android:text="E-mail"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/contact_theEmail"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_mobile" />


        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="138dp" />

        <TextView
            android:id="@+id/contacts_theName"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textColor="@color/colorAccent"
            android:textIsSelectable="true"
            android:textSize="18dp"

            app:layout_constraintTop_toTopOf="@+id/contacts_name"
            app:layout_constraintBottom_toBottomOf="@id/contacts_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/contacts_name"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/contact_theMobile"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"

            android:textIsSelectable="true"
            android:textSize="18dp"

            app:layout_constraintBottom_toBottomOf="@id/contact_mobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/contact_mobile"
            app:layout_constraintTop_toBottomOf="@+id/contacts_theName" />

        <TextView
            android:id="@+id/contact_theEmail"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"

            android:textIsSelectable="true"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/contacts_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/contacts_email"
            app:layout_constraintTop_toTopOf="@id/contacts_email" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>